cabal-version:      2.4
name:               Rosalind
version:            0.1.0.0
synopsis:

extra-source-files:
    README.md

library Rosalind-lib
  exposed-modules:  
                      Rosalind.Problems.Rna
                      Rosalind.Problems.Hamm
                      Rosalind.Problems.Revc
                      Rosalind.Problems.Tran
                      Rosalind.Problems.Gc
                      Rosalind.Problems.Prot
                      Rosalind.Problems.Orf
                      Rosalind.Problems.Subs 
                      Rosalind.Problems.Frmt 
                      Rosalind.Problems.FiltDataset
                      Rosalind.Problems.Filt
                      Rosalind.Common
                      Rosalind.Codon2ProteinConv
                      Rosalind.DnaBase
                      Rosalind.RnaBase
                      Rosalind.Fasta
                      Rosalind.Fastq
                      Rosalind.GeneticStringConversion
                      Rosalind.Motif 
                      Rosalind.ProteinWithStop
                      Rosalind.RosalindStrings                                                                                       
                      Rosalind.Services.Entrez                      
  build-depends:    base ^>=4.14.1.0
                      , containers
                      , extra
                      , lens
                      , mtl
                      , text
                      , protolude
                      , transformers
                      , aeson
                      , lens-aeson
                      , raw-strings-qq
                      , generic-lens
                      , generic-lens-core                                                               
                      , bytestring
                      , directory
                      , random
                      , wai
                      , hspec
                      , QuickCheck
                      , parsec
                      , parsec-numbers
                      , conduit
                      , streaming
                      , text-show
                      , exceptions
                      , req
                      , either
                      , split                      
                      , ilist                  
                      , regex-posix
                      , array
                      , async
                      , errors
                      , parsec-numbers
                      , parsec-numeric     
                      , megaparsec   
                      , vector        
                      , template-haskell
                      , generic-monoid    
                      , servant-openapi3
                      , openapi3    
                      , servant                   
  hs-source-dirs:   src/
  default-language: Haskell2010
  ghc-options: 
            -Wall 
            -fno-warn-incomplete-uni-patterns
            -Wincomplete-patterns             
            -Wincomplete-uni-patterns 
            -Wincomplete-record-updates 
            -Wmissing-fields   

test-suite Rosalind-test
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test/
    main-is:          Driver.hs
    build-tool-depends:
      tasty-discover:tasty-discover     
    other-modules: 
        Spec.Rosalind.Common
        Spec.Rosalind.Problems.RevcSpec  
        Spec.Rosalind.Problems.RevcHedgehogSpec  
        Spec.Rosalind.Problems.HammSpec  
        Spec.Rosalind.Problems.HammHedgehogSpec 
        Spec.Rosalind.Problems.RnaHedgehogSpec
        Spec.Rosalind.Problems.TranHedgehogSpec
        Spec.Rosalind.Problems.GcHedgehogSpec
        Spec.Rosalind.Problems.ProtHedgehogSpec
        Spec.Rosalind.Problems.OrfHedgehogSpec
        Spec.Rosalind.Problems.SubsHedgehogSpec
        Spec.Rosalind.FastaHedgehogSpec
        Spec.Rosalind.MotifHedgehogSpec
        Spec.Rosalind.Problems.FiltHedgehogSpec
    build-depends:     
        base ^>=4.14.1.0
      , Rosalind-lib
      , tasty                  
      , tasty-expected-failure
      , hedgehog               
      , tasty-hedgehog    
      , tasty-quickcheck   
      , hspec
      , containers
      , tasty-hunit
      , smallcheck       
      , lens
      , lens-aeson
      , containers
      , extra
      , parsec
      , split
      , QuickCheck
      , aeson
      , tasty-th
      , HUnit
      , text
      , unordered-containers
      , megaparsec  
      , directory
      , filepath    
      , either
    ghc-options:         -Wall  
              -fno-warn-incomplete-uni-patterns
              -Wincomplete-patterns             
              -Wincomplete-uni-patterns 
              -Wincomplete-record-updates 
              -Wmissing-fields    


executable rosalind-cli
  main-is: CLI.hs
  ghc-options:  -main-is CLI
  other-modules:
  hs-source-dirs: app/  
  ghc-options: -Wall -Werror -Wcompat -Widentities -Wincomplete-uni-patterns -Wincomplete-record-updates -Wno-unused-top-binds -Wno-orphans
  build-depends:
    base 
    , Rosalind-lib
    , extra
    , optparse-applicative
    , text
    , timeit
    , directory
    , filepath
  default-language: Haskell2010
  ghc-options:  -Wall  
                -fno-warn-incomplete-uni-patterns
                -Wincomplete-patterns             
                -Wincomplete-uni-patterns 
                -Wincomplete-record-updates 
                -Wmissing-fields    

library rosalind-server
  main-is: Main.hs
  other-modules:
  exposed-modules:
      Api
      
  hs-source-dirs:
      server/src
  build-depends:
      aeson
    , base
    , containers
    , servant
    , servant-server
    , Rosalind-lib
    , text
    , wai
    , warp
    , extra
    , servant-openapi3
    , openapi3
  default-language: Haskell2010
  ghc-options:         -Wall  
              -fno-warn-incomplete-uni-patterns
              -Wincomplete-patterns             
              -Wincomplete-uni-patterns 
              -Wincomplete-record-updates 
              -Wmissing-fields    

test-suite rosalind-server-test
    default-language: Haskell2010
    type:             exitcode-stdio-1.0
    hs-source-dirs:   testServer/
    main-is:          Driver.hs
    build-tool-depends:
      tasty-discover:tasty-discover     
    other-modules:    
      Spec.ApiSpec   
    build-depends:     
        base ^>=4.14.1.0
      , Rosalind-lib
      , rosalind-server
      , tasty                  
      , tasty-expected-failure
      , hedgehog               
      , tasty-hedgehog    
      , tasty-quickcheck   
      , hspec
      , containers
      , tasty-hunit
      , tasty-hspec
      , smallcheck       
      , lens
      , lens-aeson
      , containers
      , extra
      , parsec
      , split
      , QuickCheck
      , aeson
      , tasty-th
      , HUnit
      , text
      , unordered-containers
      , megaparsec  
      , directory
      , filepath    
      , either
      , servant-client
      , servant-server
      , servant
      , wai
      , warp
      , http-client
    ghc-options:         -Wall  
              -fno-warn-incomplete-uni-patterns
              -Wincomplete-patterns             
              -Wincomplete-uni-patterns 
              -Wincomplete-record-updates 
              -Wmissing-fields    